<%= form_with(model: student_info) do |form| %>
  <div class="card">
    <div class="card-body">
      <% if student_info.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(student_info.errors.count, "error") %> prohibited this student_info from being saved:</h2>

          <ul>
            <% student_info.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3 row">
        <%= form.label :first_name, style: "display: block", class: 'col-sm-2 col-form-label' %>
        <%= form.text_field :first_name, class: 'col-sm-10 form-control', placeholder: 'First Name' %>
      </div>

      <div class="mb-3">
        <%= form.label :last_name, style: "display: block", class: 'form-label' %>
        <%= form.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
      </div>

      <div class="mb-3">
        <%= form.label :age, style: "display: block", class: 'form-label' %>
        <%= form.text_field :age, class: 'form-control', placeholder: 'Age' %>
      </div>

      <div class="mb-3">
        <%= form.label :address, style: "display: block", class: 'form-label' %>
        <%= form.text_field :address, class: 'form-control', placeholder: 'Address' %>
      </div>

      <div class="mb-3">
        <%= form.label :geneder, style: "display: block", class: 'form-label' %>
        <%= form.select :geneder , StudentInfo.geneders.keys, class: 'form-select'%>
      </div>

      <div class="mb-3">
        <%= form.label :occuption, style: "display: block", class: 'form-label' %>
        <%= form.text_field :occuption, class: 'form-control', placeholder: 'Occuption' %>
      </div>

      <div class="mb-3">
        <%= form.label :martial_status, style: "display: block", class: 'form-label' %>
        <%= form.select :matrial_status, StudentInfo.matrial_statuses.keys, class: 'form-select'%>
      </div>

      <div class="mb-3">
        <%= form.submit %>
      </div>
    </div>
  </div>
<% end %>
